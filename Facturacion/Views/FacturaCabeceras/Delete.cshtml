@model Facturacion.Models.FacturaCabecera

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Eliminar Factura</h1>

<h3 class="mb-3">¿Estás seguro de que deseas eliminar esto?</h3>
<div class="border p-3">
    <h4>FacturaCabecera</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFactura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFactura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete" class="mb-3">
        <input type="hidden" asp-for="IdFacturaCabecera" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver al Listado</a>
    </form>
</div>

