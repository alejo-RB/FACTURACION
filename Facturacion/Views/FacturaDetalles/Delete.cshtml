@model Facturacion.Models.FacturaDetalle

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Eliminar Detalle de Factura</h1>

<h3 class="mb-3">¿Estás seguro de que deseas eliminar esto?</h3>
<div class="border p-3">
    <h4>FacturaDetalle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Factura Cabecera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFacturaCabeceraNavigation.IdFacturaCabecera)
        </dd>
        <dt class="col-sm-2">
            Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProductoNavigation.IdProducto)
        </dd>
    </dl>

    <form asp-action="Delete" class="mb-3">
        <input type="hidden" asp-for="IdFacturaDetalle" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver al Listado</a>
    </form>
</div>

