@model Facturacion.Models.FacturaDetalle

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Detalles de Detalle de Factura</h1>

<div class="border p-3">
    <h4>FacturaDetalle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Factura Cabecera
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdFacturaCabeceraNavigation.IdFacturaCabecera)
        </dd>
        <dt class="col-sm-2">
            Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdProductoNavigation.IdProducto)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdFacturaDetalle"><i class="bi bi-pencil"></i> Editar</a> |
    <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver al Listado</a>
</div>

