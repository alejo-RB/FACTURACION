@model IEnumerable<Facturacion.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Productos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus"></i> Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">@Html.DisplayNameFor(model => model.Nombre)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Precio)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Stock)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.IdProducto"><i class="bi bi-pencil"></i> Editar</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.IdProducto"><i class="bi bi-info-circle"></i> Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdProducto"><i class="bi bi-trash"></i> Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
